<div class="row mt-2">
    <div class="col-sm-10 offset-sm-1">
        <div class="card">
            <form action="/admin/registration-admin-green-card" method="POST" class="needs-validation" novalidate>

            <div class="card-header"><center><h2>Registratsiya</h2></center></div>
            <div class="card-body">
                <div class="form-group">
                    <label for="email">Email адрес:</label>
                    <input type="email" class="form-control" name="email" placeholder="Email kiriting" id="email" required>
                    <div class="invalid-feedback">Введите email</div>
                </div>
                <div class="form-group">
                    <label for="name">Ismingiz:</label>
                    <input type="text" class="form-control" name="name" placeholder="Ismingizni kiriting" id="name" required>
                    <div class="invalid-feedback">Ismingizni kiriting</div>
                </div>
                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="password" class="form-control" name="password" placeholder="Введите пароль" id="password" required>
                    <div class="invalid-feedback">Введите пароль</div>
                </div>
            </div>
            <div class="card-footer"><center><button type="submit" class="btn btn-primary">Ro'yhatdan o'tish</button></center></div>
            </form>
        </div> 
    </div>
</div>